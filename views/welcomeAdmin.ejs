<!-- Content -->
 <div class="container">
        <div class="alert text-center bg-dark my-3">
            <h5 class="heading">Student List</h5>   
        </div>
     </div>

 <div class="container">
        <table class="table text-center">
            <thead>
                <tr>
                    <th>StudentPhoto</th>
                    <th>S.No</th>
                    <th>RollNo</th>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Father Name</th>
                    <th>Mother Name</th>
                    <th>Course</th>
                    <th>Branch</th>
                    <th>YearOfAddmission</th>
                    <th>Actions</th>

                </tr>
            </thead>
            <tbody>
                <%  students.forEach((student, index) =>{ %>
                    <tr>
                        <td><img src="<%= student.studentImage %>" width='70px' height='70px' class="logo"></td>
                        <td><%= index + 1 %></td>
                        <td><%= student.rollNo %></td>
                        <td><%= student.studentName %></td>
                        <td><%= student.email %></td>
                        <td><%= student.fatherName %></td>
                        <td><%= student.motherName %></td>
                        <td><%= student.course %></td>
                        <td><%= student.branch %></td>
                        <td><%= student.yearOfAddmission %></td>
                        <td>
                            <a href="/edit/student/page/<%= student._id %>" class="btn">Edit</a>
                            <a href="/delete/student/<%= student._id %>" class="btn">Delete</a>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
     </div>

