  <div class="container-fluid">
    <!-- Brand -->
    <a class="navbar-brand fw-bold" href="/">RDEC</a>

    <!-- Left-side links -->
    <ul class="navbar-nav me-auto">
      <li class="nav-item">
        <a class="nav-link" href="/addstudent">Add Student</a>
