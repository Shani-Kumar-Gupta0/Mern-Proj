<style>
  body {
  position: relative;
  min-height: 60vh;
  background: url("./bg-image.jpg");
  background-position: center;
  background-repeat: no-repeat;
  background-size: cover;
  color: white;
  background: linear-gradient(135deg, #2125298a, #2125298a);/* soft light blue gradient */
  }

  .login-card {
    background-color: #f9f5ff; /* soft lavender */
    border-radius: 20px;       /* rounded edges */
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    /* color: #374151; */

  }

  .login-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 25px rgba(0, 0, 0, 0.15);
  }

  .btn-custom-login {
  background: rgb(44, 55, 63);
  color: white;
  display: block;
  margin: auto;
  }

  .btn-custom-login:hover {
    background-color: #374151;
    transform: scale(1.05);
  }

  .btn-custom-signup {
    background-color: #10b981; /* teal/green */
    color: white;
    border-radius: 12px;
    transition: all 0.3s ease;
  }

  .btn-custom-signup:hover {
    background-color: #059669;
    transform: scale(1.05);
  }

  .card-title {
    font-weight: 700;
    color: #374151;
  }

  .form-control {
    border-radius: 12px;
  }
img{
  position: relative;
  width: 40%;
  border-radius: 50%;


}
.black{
  color: #374151;
}

</style>

